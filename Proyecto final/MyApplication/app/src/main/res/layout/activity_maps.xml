<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="0dp"
android:paddingLeft="0dp"
android:paddingRight="0dp"
android:paddingTop="0dp"

android:background="#c188afd8">
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="343dp"
    android:layout_height="match_parent"
    tools:context="com.aexample.a41758511.myapplication.MapsActivity"
    android:layout_x="8dp"
    android:layout_y="11dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />
    <View
        android:id="@+id/colored_bar"
        android:layout_width="333dp"
        android:layout_height="100dp"
        android:background="@color/blank"

        android:layout_x="13dp"
        android:layout_y="453dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/map"
        android:layout_alignEnd="@+id/map"
        android:layout_alignLeft="@+id/map"
        android:layout_alignStart="@+id/map" />
    <Button
        android:id="@+id/btSubir"

        android:text="Subirme"
        android:textColor="#FFFFFF"
        android:textSize="20sp"

        android:layout_width="150dp"
        android:layout_height="46dp"
        android:background="@layout/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="1"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:layout_x="203dp"
        android:layout_y="410dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/btnBajarme"
        android:layout_alignLeft="@+id/btnBajarme"
        android:layout_alignStart="@+id/btnBajarme" />

    <TextView
        android:layout_width="331dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvResult"
        android:layout_x="13dp"
        android:layout_y="453dp"
        android:textSize="16dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/map"
        android:layout_alignEnd="@+id/map"
        android:layout_alignLeft="@+id/map"
        android:layout_alignStart="@+id/map" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTUALIZAR"
        android:id="@+id/btnActualizar"
        android:layout_x="8dp"
        android:layout_y="409dp"
        android:layout_alignTop="@+id/btSubir"
        android:layout_alignLeft="@+id/map"
        android:layout_alignStart="@+id/map" />

    <Button
        android:id="@+id/btnBajarme"
        android:text="BAJARME"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:background="@layout/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="1"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:layout_x="203dp"
        android:layout_y="410dp"
        android:visibility="invisible"
        android:layout_above="@+id/colored_bar"
        android:layout_alignRight="@+id/map"
        android:layout_alignEnd="@+id/map" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRefresh"
        android:background="@mipmap/refresh"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/map"
        android:layout_alignEnd="@+id/map" />

</RelativeLayout>